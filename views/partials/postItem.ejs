<style>
  .postItem {
    margin-top: 30px;
  }

  .postItem__content {
    padding: 30px;
  }
</style>

<div class="col-md-4 postItem">
  <div class="card">
    <div class="card-body postItem__content">
      <h4 class="card-title"><%= post.title %></h4>
      <img width="300" src="<%= post.imageUrl %> " alt="" />
      <h6 style="padding: 20px 0px" class="card-text">
        <%= post.description %>
      </h6>
      <% if (username.toLowerCase() === post.author) { %>
      <a href="/posts/edit/<%= post.id %> " class="btn btn-primary">Edit</a>
      <a href="/posts/delete/<%= post.id %> " class="btn btn-danger">Delete</a>
      <% } %>
    </div>
  </div>
</div>
